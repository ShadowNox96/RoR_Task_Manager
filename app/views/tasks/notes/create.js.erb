<%- if @note.persisted? %>
    var parentNode = document.querySelector(".notes-container .notes")
    var div = document.createElement("div")
    div.classList.add("note-element");
    div.innerHTML = "<%= j render 'tasks/notes/note_partial', note: @note %>"
    parentNode.appendChild(div)
    document.getElementById("note_body").value = "";
    // Hace scrool hacia abajo
    window.scrollTo({
        top: window.innerHeight,
        behavior: "smooth"
    });
<% end %>