.categories.index-page
.card
  .card-body
    %h1 Lista de Categorías

    %table.table
      %thead
        %tr
          %th Name
          %th Description
          %th
          %th
          %th

      %tbody
        - @categories.each do |category|
          %tr
            %td= category.name
            %td= category.description
            %td= link_to 'Show', category, class: 'btn btn-sm btn-info'
            %td= link_to 'Edit', edit_category_path(category), class:'btn btn-sm btn-success'
            %td= link_to 'Destroy', category, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-sm btn-danger'

    %br

    = link_to 'Nueva Categoría', new_category_path, class: 'btn btn-info'
